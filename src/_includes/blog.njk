<!-- Blog Section -->
<section id="blog" class="py-24 px-6 relative overflow-hidden">
  <!-- Decoración de fondo -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute top-1/3 left-1/4 w-12 h-12 border border-[#d4af37] rotate-45 animate-float"
    ></div>
    <div
      class="absolute bottom-1/4 right-1/3 w-16 h-16 border-2 border-[#d4af37] rounded-full animate-float-delay"
    ></div>
  </div>

  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Encabezado -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-cinzel text-[#d4af37] mb-4">
        <span class="text-white">Los Papiros</span> Digitales
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Sabiduría cifrada para navegar el
        <span class="text-[#d4af37]">océano de bits</span> sin naufragar
      </p>
    </div>

    <!-- Grid de Artículos -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {% from "ui/cardblog.njk" import cardblog %}
      <!---->
      {% for article in collections.web %}
      <!---->
      {{
        cardblog(
          article.url,
          article.data.tags,
          article.data.title,
          article.data.datearticle,
          article.data.timearticle,
          article.data.description,
          article.data.image
        )
      }}
      <!---->
      {% endfor %}
      <!---->
    </div>

    <!-- CTA -->
    <div class="text-center">
      <a
        href="#"
        class="inline-flex items-center border border-[#d4af37] text-[#d4af37] px-6 py-3 rounded-lg hover:bg-[#d4af37] hover:text-[#0a0f2b] transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"
          />
        </svg>
        Explorar todos los pergaminos
      </a>
    </div>
  </div>

  <!-- Animaciones -->
  <style>
    @keyframes float {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }
    .animate-float {
      animation: float 8s ease-in-out infinite;
    }
    .animate-float-delay {
      animation: float 8s ease-in-out 4s infinite;
    }
    .font-cinzel {
      font-family: "Cinzel", serif;
    }
  </style>
</section>
