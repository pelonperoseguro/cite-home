<div class="relative py-24 overflow-hidden" id="webcta">
  <!-- Fondo profético -->
  <div class="absolute inset-0 z-0 opacity-20">
    <div
      class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1462331940025-496dfbfc7564?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2110&q=80')] bg-cover bg-center"
    ></div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-[#0a0f2b] via-[#0a0f2b]/70 to-[#0a0f2b]"
    ></div>
  </div>

  <!-- Contenido -->
  <div class="relative z-10 container px-6 mx-auto">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Glifo animado -->
      <div
        id="prophecyGlyph"
        class="mb-8 mx-auto w-24 h-24 text-[#d4af37] opacity-0 transition-opacity duration-1000"
      >
        <svg
          viewBox="0 0 100 100"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M50 0 L62 38 L100 38 L69 59 L82 100 L50 75 L18 100 L31 59 L0 38 L38 38 Z"
            fill="currentColor"
          />
          <path
            d="M50 20 L57 40 L80 40 L60 55 L67 80 L50 65 L33 80 L40 55 L20 40 L43 40 Z"
            fill="#0a0f2b"
          />
        </svg>
      </div>

      <!-- Título dinámico -->
      <h2
        id="prophecyTitle"
        class="mb-6 text-4xl font-bold text-white font-cinzel md:text-5xl lg:text-6xl opacity-0 transform translate-y-10 transition-all duration-700"
      >
        <span class="text-[#d4af37]">El Caos Digital</span> Ya Está Aquí
      </h2>
      <br />

      <!-- Subtítulo con efecto máquina de escribir -->
      <div
        id="prophecySubtitle"
        class="mb-10 text-xl text-gray-300 h-16 md:text-2xl font-mono overflow-hidden"
      >
        <!-- El texto se insertará dinámicamente via JS -->
      </div>

      <!-- Contador de ataques en tiempo real -->
      <div class="flex justify-center mb-12">
        <div
          class="px-6 py-3 border border-[#d4af37]/30 rounded-lg bg-[#d4af37]/70 backdrop-blur-sm"
        >
          <div class="flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 mr-2 text-red-500 animate-pulse"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
            <span class="text-sm font-medium text-gray-300 mr-1"
              >Ataques globales hoy:</span
            >
            <span id="attackCounter" class="text-lg font-bold text-white"
              >0</span
            >
          </div>
        </div>
      </div>

      <!-- Botones CTA -->
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/#contacto"
          id="mainCta"
          class="relative px-8 py-4 text-lg font-bold text-[#0a0f2b] bg-[#d4af37] rounded-lg hover:bg-[#f1c954] transition-all transform hover:scale-105 hover:shadow-lg hover:shadow-[#d4af37]/30 opacity-0 translate-y-10"
        >
          <span class="relative z-10">Iniciar Ritual de Protección</span>
          <div
            class="absolute inset-0 border-2 border-[#d4af37] rounded-lg animate-ping-slow opacity-0"
          ></div>
        </a>

        <a
          href="#ritualdeproteccion"
          id="secondaryCta"
          class="px-8 py-4 text-lg font-bold text-white border-2 border-[#d4af37] rounded-lg hover:bg-[#d4af37]/10 transition-all opacity-0 translate-y-10"
        >
          <span class="flex items-center">
            Ver Profecía Completa
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          </span>
        </a>
      </div>

      <!-- Sello de garantía -->
      <div
        id="guaranteeSeal"
        class="mt-12 opacity-0 transition-opacity duration-1000 delay-1000"
      >
        <div
          class="inline-flex items-center px-4 py-2 bg-[#d4af37]/10 border border-[#d4af37]/30 rounded-full"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2 text-[#d4af37]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
            />
          </svg>
          <span class="text-sm font-medium text-[#d4af37]"
            >Protección garantizada por 13 lunas</span
          >
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Efecto máquina de escribir
    const prophecyText =
      "¿De qué lado estarás cuando los hackers invoquen sus demonios digitales?";
    const subtitleElement = document.getElementById("prophecySubtitle");
    let i = 0;

    function typeWriter() {
      if (i < prophecyText.length) {
        subtitleElement.innerHTML += prophecyText.charAt(i);
        i++;
        setTimeout(typeWriter, Math.random() * 50 + 30);
      } else {
        subtitleElement.style.borderRight = "none";
      }
    }

    // Iniciar animaciones al cargar
    setTimeout(() => {
      document.getElementById("prophecyGlyph").style.opacity = "1";
      document.getElementById("prophecyTitle").style.opacity = "1";
      document.getElementById("prophecyTitle").style.transform =
        "translateY(0)";

      // Iniciar máquina de escribir después de 700ms
      setTimeout(() => {
        subtitleElement.style.borderRight = "2px solid #d4af37";
        typeWriter();
      }, 700);

      // Animación botones con delay escalonado
      setTimeout(() => {
        document.getElementById("mainCta").style.opacity = "1";
        document.getElementById("mainCta").style.transform = "translateY(0)";
      }, 1400);

      setTimeout(() => {
        document.getElementById("secondaryCta").style.opacity = "1";
        document.getElementById("secondaryCta").style.transform =
          "translateY(0)";
      }, 1700);

      // Mostrar sello de garantía
      setTimeout(() => {
        document.getElementById("guaranteeSeal").style.opacity = "1";
      }, 2000);
    }, 300);

    // Contador de ataques dinámico
    let attackCount = 0;
    const targetCount = Math.floor(Math.random() * 500) + 2847;
    const counterElement = document.getElementById("attackCounter");
    const counterInterval = setInterval(() => {
      if (attackCount < targetCount) {
        attackCount += Math.floor(Math.random() * 10) + 1;
        counterElement.textContent = attackCount.toLocaleString();
      } else {
        clearInterval(counterInterval);
      }
    }, 50);
  });
</script>

<style>
  .animate-ping-slow {
    animation: ping 3s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  @keyframes ping {
    0% {
      transform: scale(0.9);
      opacity: 0.8;
    }
    70%,
    100% {
      transform: scale(1.3);
      opacity: 0;
    }
  }
</style>
