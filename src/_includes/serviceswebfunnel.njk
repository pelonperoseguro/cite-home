    function calculateOffer() {
      let basePrice = 4999;

      // Ajustar por datos sensibles
      if (formData.dataSensitive === "si") basePrice += 3000;

      // Ajustar por datos financieros
      if (formData.financialData === "si") basePrice += 5000;

      // Ajustar por tr√°fico
      switch (formData.monthlyVisitors) {
        case "10k":
          basePrice *= 1.5;
          break;
        case "100k":
          basePrice *= 2;
          break;
        case "1m":
          basePrice *= 3;
          break;
        case "1m+":
          basePrice *= 4;
          break;
      }

      // Ajustar por nivel de seguridad
      if (formData.securityLevel === "3") basePrice *= 1.2;

      formData.offer = {
        basicPrice:
          "$" + Math.round(basePrice).toLocaleString("es-MX") + " MXN/mes",
        completePrice:
          "$" +
          Math.round(basePrice * 1.8).toLocaleString("es-MX") +
          " MXN/mes",
      };
    }

