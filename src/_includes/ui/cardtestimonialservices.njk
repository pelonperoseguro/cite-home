{% macro cardtestimonial(name, business, description, badge, image) %}
<div
  class="flex flex-col gap-3 justify-between p-8 border border-[#d4af37]/20 rounded-xl hover:shadow-lg hover:shadow-[#d4af37]/10 transition-all"
>
  <!-- Avatar -->

  <div class="">
    <div
      class="w-12 h-12 rounded-full border-2 border-[#d4af37] overflow-hidden"
    >
      <img
        src="{{ image }}"
        alt="Carlos M."
        class="w-full h-full object-cover"
      />
    </div>
  </div>
  <!-- Nombre y Empresa -->

  <div class="flex items-center">
    <div class="flex-1 min-w-0">
      <p class="text-lg font-bold text-white truncate">
        {{ name }}
      </p>
      <p class="text-sm text-[#d4af37] truncate">{{ business }}</p>
    </div>
    <div class="ml-4">
      <div class="flex items-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 text-[#d4af37]"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
          />
        </svg>
        <span class="ml-1 text-white">5.0</span>
      </div>
    </div>
  </div>
  <!-- Descripcion de la empresa -->

  <div class="prose prose-invert max-w-none">
    <p class="text-gray-300 italic">"{{ description }}"</p>
  </div>
  <!-- insignia -->

  <div class="pt-4 border-t border-[#d4af37]/10">
    <div class="flex items-center justify-between">
      <span class="text-xs text-[#d4af37]">{{ badge }}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 text-[#d4af37]"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"
        />
      </svg>
    </div>
  </div>
</div>
{% endmacro %}
